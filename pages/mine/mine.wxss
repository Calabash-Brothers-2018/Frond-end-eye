.userinfo {  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar { 
  width: 128rpx;  
  height: 128rpx;  
  border-radius: 50%;  
}  
  
.userinfo-nickname {  
  color: #aaa;  
}  

.item-style{
  position: relative;   
  display: flex;  
  padding:20px;   
  -webkit-box-align: center;  
  -ms-flex-align: center;  
  align-items: center;   
  border-bottom: 1px solid #dadada;
  font-size: 20px; 
  flex-direction: row;
  justify-content: space-between;
}  

